    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y hledger",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
    ]
}